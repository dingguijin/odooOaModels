<odoo>
	<data>

		<record model="ir.module.category" id="odoo_oa_base.main_groups">
			<field name="name">流程申请</field>
			<field name="visible" eval="0" />
			<field name="sequence">5</field>
		</record>

		<record id="odoo_oa_base.user_groups" model="res.groups">
			<field name="name">员工</field>
			<field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
			<field name="category_id" ref="odoo_oa_base.main_groups"/>
		</record>

		<record id="odoo_oa_base.supervisor_groups" model="res.groups">
			<field name="name">部门经理</field>
			<field name="category_id" ref="main_groups"/>
			<field name="implied_ids" eval="[(4, ref('odoo_oa_base.user_groups'))]"/>
		</record>

		<record id="odoo_oa_base.manage_groups" model="res.groups">
			<field name="name">管理员</field>
			<field name="category_id" ref="main_groups"/>
			<field name="implied_ids" eval="[(4, ref('odoo_oa_base.supervisor_groups'))]"/>
			<field name="users" eval="[(4, ref('base.user_admin'))]"/>
		</record>

	</data>
</odoo>
